<apex:page controller="CustomSettingController">
       
         <style>
        .largeInput {
            width: 450px; /* Adjust the width as needed */
            height: 20px; /* Adjust the height as needed */
            
        }
    </style>
        <apex:form >
            <apex:pageMessages />
        <apex:pageBlock title="Enter Airwaves360 Credential Information" rendered="{!!falg}">
